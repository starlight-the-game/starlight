{
    "compilerOptions": {
        "composite": true,
        "target": "ES2020",
        "jsx": "preserve",
        "moduleDetection": "auto",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": true,
        "maxNodeModuleJsDepth": 1,
        "removeComments": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitThis": true,
        "useUnknownInCatchVariables": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false
    },
    "include": ["frontend/**/*.ts", "server/**/*.ts", "tests/**/*.ts", "emotiv/**/*.ts"],
    "exclude": ["frontend/webpack.config.js"]
}
