{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "strict": true,
        "noEmit": true,
        "outDir": "dist"
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
