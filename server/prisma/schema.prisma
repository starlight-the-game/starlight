datasource db {
    provider = "sqlite"
    url      = "file:./starlight.db"
}

generator client {
    provider = "prisma-client-js"
}

model Player {
    Id                      String        @id @default(uuid())
    NumericId               BigInt
    Handle                  String
    Email                   String
    HashedPassword          String
    HashedTemporaryPassword String
    TotalPlayTime           BigInt
    Level                   BigInt
    ExpOfLevel              BigInt
    CreationDate            DateTime      @default(now())
    Achievements            Achievement[]
    Scores                  Score[]
    Setting                 Setting?
}

model Achievement {
    Id        BigInt   @id
    Name      String
    Detail    String
    FavorText String
    Players   Player[]
}

model Score {
    Id             BigInt   @id @default(autoincrement())
    TrackId        BigInt
    TrackName      String
    TotalPoints    BigInt
    Accuracy       Float
    Critical       BigInt
    MaxCombo       BigInt
    Grade          String
    Perfect        BigInt
    Good           BigInt
    Bad            BigInt
    Miss           BigInt
    RawJson        String
    SubmissionDate DateTime
    PlayerId       String
    Player         Player   @relation(fields: [PlayerId], references: [Id])
}

model Setting {
    Id                BigInt @id @default(autoincrement())
    KeyCode1          Int
    KeyCode2          Int
    KeyCode3          Int
    KeyCode4          Int
    MasterVolume      Int
    MusicVolume       Int
    SoundEffectVolume Int
    Offset            Int
    FrameRate         Int
    PlayerId          String @unique
    Player            Player @relation(fields: [PlayerId], references: [Id])
}
